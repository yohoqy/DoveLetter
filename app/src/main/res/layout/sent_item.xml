<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_sent_receiver_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:text="example@qq.com"
            android:textColor="#333"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/iv_sent_has_file"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_attachment_green_24dp"
            android:layout_gravity="right"
            android:padding="5dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_sent_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="2020-06-13"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sent_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="5dp"
                android:text="02:00"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_sent_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:text="主题"
        android:textColor="#333"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/tv_sent_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="内容"
        android:textColor="@color/title_color"
        android:textSize="13sp"
        />
<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="#eee" />-->

</androidx.cardview.widget.CardView>
